// prisma/schema.prisma
datasource db {
  provider = "postgresql" // or "postgresql", "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider             = "prisma-client-py"
  output               = "../app/db/generated"
  recursive_type_depth = -1
}

model Record {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  age     Int
  country String
}
